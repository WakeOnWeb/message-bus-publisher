<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass name="WakeOnWeb\EventBusPublisher\Infra\Driver\DoctrineORM\Entity\ListenedEvent">
        <field name="eventId" column="event_id" type="string" length="255" nullable="false" />
        <field name="eventName" column="event_name" type="string" length="255" nullable="false" />
        <field name="message" column="message" type="text" nullable="false" />
        <field name="createdAt" column="created_at" type="datetime" nullable="false" />
    </mapped-superclass>
</doctrine-mapping>
